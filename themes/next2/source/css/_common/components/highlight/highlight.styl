// https://github.com/chriskempson/tomorrow-theme

@require "theme"

// Placeholder: $code-block
$code-block {
  overflow: auto;
  margin: 0 0 15px 0;
  padding: 10px;
  font-size $code-font-size;
  color: $highlight-foreground;
  background: $highlight-background;
  line-height: $line-height-code-block;
  +mobile(){background:#eee;}
}

pre, code { font-family: $code-font-family; }

code {
  padding: 2px 4px;
  word-break: break-all;
  color: $code-foreground;
  background: $code-background;
  border-radius: $code-border-radius;
  font-size $code-font-size;
  color: #c7254e;
  background: #f9f2f4;
  border: 1px solid #d6d6d6;
  margin: 2px;
}

pre {
  @extend $code-block;

  code {
    padding: 0;
	padding-left:10px;
    color: $highlight-foreground;
    background: none;
    text-shadow: none;
  }
}

.highlight {
  @extend $code-block;
  border: 1px solid #d6d6d6;
  background-color: #f7f7f7;

  pre {
    border: none;
    margin: 0;
    padding: 1px;
	background-color: #f7f7f7;
	
  }

  table {
    margin: 0;
    width: auto;
    border: none;
  }

  td {
    border: none;
    padding: 0;
  }

  figcaption {
    clearfix();
    font-size: 1em;
    color: $highlight-foreground;
    line-height: 1em;
    margin-bottom: 0.5em;

    a {
      float: right;
      color: $highlight-foreground;

      &:hover { border-bottom-color: $highlight-foreground; }
    }
  }
figcaption {
  +mobile(){display:none;}
}
  .gutter pre {
    color: $grey-dim;
    text-align: center;
    padding: 0 8px;
	background-color: #eff2f3;
	margin: 0;
  }

  .line { height: 20px; }
}


.gist table {
  width: auto;

  td { border: none; }
}

pre {

  .comment { color: $highlight-comment; }

  .variable
  .attribute
  .tag
  .regexp
  .ruby .constant
  .xml .tag .title
  .xml .pi
  .xml .doctype
  .html .doctype
  .css .id
  .css .class
  .css .pseudo {
    color: $highlight-red;
  }

  .number
  .preprocessor
  .built_in
  .literal
  .params
  .constant
  .command {
    color: $highlight-orange;
  }

  .ruby .class .title
  .css .rules .attribute
  .string
  .value
  .inheritance
  .header
  .ruby .symbol
  .xml .cdata
  .special
  .number
  .formula {
    color: $highlight-green;
  }

  .title
  .css .hexcolor {
    color: $highlight-aqua;
  }

  .function
  .python .decorator
  .python .title
  .ruby .function .title
  .ruby .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title {
    color: $highlight-blue;
  }

  .keyword
  .javascript .function {
    color: $highlight-purple;
  }

}
.highlight .code pre {
    padding-left: 10px;
    padding-right: 10px;
    background-color: #f7f7f7;
}


.codecopy{margin:0;
padding:0;
}
.codecopy br{display:none;}
.codecopy figure br{display:block;}
.codecopy figure figcaption{text-align:left;position:absolute;right:10px;font-size:16px;}
.codecopy figure figcaption .fa-clipboard {
  color: #aaa;
}
.codecopy figure figcaption span {
  color: #808080;
  cursor: pointer;
}
.codecopy figure:hover .fa-clipboard {
  color: #000;
}
.codecopy  {position: relative;background-color:#000;}