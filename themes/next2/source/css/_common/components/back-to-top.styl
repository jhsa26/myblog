.back-to-top {
  box-sizing: border-box;
  position: fixed;
  bottom: $b2t-position-bottom;
  right: 66px;
  z-index: $zindex-5;
  padding: 4px 3px 0 3px;
  width: 30px;
  height:36px;
 // background: $b2t-bg-color;
  background: #ccc;
  font-size: $b2t-font-size;
 // opacity: $b2t-opacity;
  opacity: 1;
  color: $b2t-color;
  cursor: pointer;
  text-align: center;
  -webkit-transform: translateZ(0);
  transition-property: bottom;
  the-transition();

  +mobile() {
    right: 0px;
	transition-property: right;
  }
  +tablet() {
    right: 0px;
	transition-property: right;
  }

  &.back-to-top-on {
    //bottom: $b2t-position-bottom-on;
	bottom: 128px;
  }
}

.back-to-top:hover{background-color: #669fdd;}