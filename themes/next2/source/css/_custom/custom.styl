.side-buttons {
    position: fixed;
    width: 30px;
    bottom: 50%;
    right: 0px;
    z-index: 1000;
}

.side-buttons .side-buttons-box {
    box-sizing: border-box;
	position: relative;
    top: 0;
    left: 0;
    width: 100%;
	height: 36px;
    margin-bottom: 1px;	
    background: #ccc;
	font-size: 16px;
    cursor: pointer;
    text-align: center;
    opacity: 1; 
	color: #fff;
    border-radius: 0px;
	overflow:hidden;
	line-height: 2;
}

.side-buttons .side-buttons-box:hover {
	background-color: #669fdd;
}
.side-buttons-box:hover .bt-left{display:none;}
.side-buttons .side-buttons-box p{
	color:#333;
	font-size:12px;
	line-height:12px;
	margin:0;
	padding:0;
	padding-top:5px;
}

