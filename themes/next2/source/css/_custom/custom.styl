}

.mobile_code .code_img{
	padding: 20px;
	border: 1px solid #d1d2d6;
	position: fixed;
	right: 38px;
	bottom: 50%;
	background-color: #fff;
	display: none;
	z-index: 1024;
	}
.mobile_code .code_img img {
	width: 156px;
	height: 156px;
}
